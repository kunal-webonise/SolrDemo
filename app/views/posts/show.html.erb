<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

More Like this:

<% @more.results.each do |i| %>
    <%= link_to i.title,i %>
<% end %>
<br>

<ul>
  <h3>Comments</h3>
<%@post.comments.each do |i|%>
   <li>
     <%= i.body %>
   </li>
<%end%>
</ul>

<%= form_for(@post.comments.new, :url =>post_comments_path(@post) ) do |f| %>

    <div class="field">
      <%= f.label :add_comment%><br />
      <%= f.text_field :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

